{
    "name": "web-content-manager-backend",
    "version": "1.0.0",
    "description": "Manage website content dynamically",
    "main": "src/index.ts",
    "_moduleAliases": {
        "@app": "build/src"
    },
    "scripts": {
        "build": "tsx scripts/build.ts",
        "start": "tsx scripts/build.ts && node -r module-alias/register build/src/index.js",
        "dev": "nodemon --exec 'tsx' src/index.ts",
        "seed": "tsx scripts/seed.ts",
        "test": "tsx scripts/run-tests.ts",
        "lint": "tsx scripts/lint.ts",
        "format": "tsx scripts/format.ts",
        "cleanup": "tsx scripts/cleanup.ts",
        "generate:module": "tsx scripts/generate-module.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zufichris/web-cms-backend.git"
    },
    "keywords": [
        "web-cms",
        "cms",
        "content-manager",
        "website-content",
        "content",
        "website",
        "dynamic",
        "website",
        "typescript",
        "nodejs",
        "express"
    ],
    "author": "zufichris",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/zufichris/web-cms-backend/issues"
    },
    "homepage": "https://github.com/zufichris/web-cms-backend#readme",
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/express": "^5.0.1",
        "@types/node": "^22.14.0",
        "eslint": "^9.23.0",
        "globals": "^16.0.0",
        "nodemon": "^3.1.9",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.29.0"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "module-alias": "^2.2.3",
        "mongoose": "^8.13.2",
        "zod": "^3.24.2"
    }
}
