{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2022"],
    "declaration": true,
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@tests/*": ["__tests__/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules/**", "**/*test.ts"]
}
